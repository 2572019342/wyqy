<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wyqy.agriculture.mapper.FarmingTaskMapper">

    <resultMap type="FarmingTask" id="FarmingTaskResult">
        <result property="taskId"             column="task_id"             />
        <result property="plantingId"         column="planting_id"         />
        <result property="landName"           column="land_name"           />
        <result property="speciesName"        column="species_name"        />
        <result property="taskType"           column="task_type"           />
        <result property="title"              column="title"               />
        <result property="content"            column="content"             />
        <result property="status"             column="status"              />
        <result property="handler"            column="handler"             />
        <result property="handledTime"        column="handled_time"        />
        <result property="createBy"           column="create_by"           />
        <result property="createTime"         column="create_time"         />
        <result property="updateBy"           column="update_by"           />
        <result property="updateTime"         column="update_time"         />
        <result property="remark"             column="remark"              />
    </resultMap>

    <sql id="selectFarmingTaskVo">
        select t.task_id,
               t.planting_id,
               l.land_name,
               s.species_name,
               t.task_type,
               t.title,
               t.content,
               t.status,
               t.handler,
               t.handled_time,
               t.create_by,
               t.create_time,
               t.update_by,
               t.update_time,
               t.remark
        from farming_task t
        left join planting_record p on t.planting_id = p.planting_id
        left join land_info l on p.land_id = l.land_id
        left join crop_species s on p.species_id = s.species_id
    </sql>

    <select id="selectFarmingTaskList" parameterType="FarmingTask" resultMap="FarmingTaskResult">
        <include refid="selectFarmingTaskVo"/>
        <where>
            <if test="taskId != null"> and t.task_id = #{taskId}</if>
            <if test="plantingId != null"> and t.planting_id = #{plantingId}</if>
            <if test="taskType != null and taskType != ''"> and t.task_type = #{taskType}</if>
            <if test="status != null and status != ''"> and t.status = #{status}</if>
            <if test="title != null and title != ''"> and t.title like concat('%', #{title}, '%')</if>
            <if test="handler != null and handler != ''"> and t.handler like concat('%', #{handler}, '%')</if>
        </where>
        order by t.create_time desc
    </select>

    <select id="selectFarmingTaskByTaskId" parameterType="Long" resultMap="FarmingTaskResult">
        <include refid="selectFarmingTaskVo"/>
        where t.task_id = #{taskId}
    </select>

    <insert id="insertFarmingTask" parameterType="FarmingTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into farming_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="plantingId != null">planting_id,</if>
            <if test="taskType != null and taskType != ''">task_type,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="handler != null and handler != ''">handler,</if>
            <if test="handledTime != null">handled_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null and remark != ''">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="plantingId != null">#{plantingId},</if>
            <if test="taskType != null and taskType != ''">#{taskType},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="handler != null and handler != ''">#{handler},</if>
            <if test="handledTime != null">#{handledTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
        </trim>
    </insert>

    <update id="updateFarmingTask" parameterType="FarmingTask">
        update farming_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="plantingId != null">planting_id = #{plantingId},</if>
            <if test="taskType != null and taskType != ''">task_type = #{taskType},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="handler != null and handler != ''">handler = #{handler},</if>
            <if test="handledTime != null">handled_time = #{handledTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deleteFarmingTaskByTaskId" parameterType="Long">
        delete from farming_task where task_id = #{taskId}
    </delete>

    <delete id="deleteFarmingTaskByTaskIds" parameterType="String">
        delete from farming_task where task_id in
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>

    <delete id="deleteFarmingTaskByPlantingIds" parameterType="String">
        delete from farming_task where planting_id in
        <foreach item="plantingId" collection="array" open="(" separator="," close=")">
            #{plantingId}
        </foreach>
    </delete>

</mapper>
